{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "./build",
    "typeRoots": ["@Types", "./node_modules/@Types"],
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@services/*": ["services/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["shared/errors/*"],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
